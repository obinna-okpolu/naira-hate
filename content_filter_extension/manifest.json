{
    "manifest_version": 3,
    "name": "Content Filter Helper",
    "version": "1.0",
    "description": "Filters posts on Twitter and Nairaland",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
    "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png", 
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.twitter.com/*",
          "*://*.x.com/*",
          "*://*.nairaland.com/*"
        ],
        "js": ["content.js"]
      }
    ]
  }